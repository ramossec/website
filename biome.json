{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignore": [
			"node_modules/",
			"dist/"
		  ]
	},
	"formatter": {
		"enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 80
	},
	"linter": {
		"enabled": true,
        "rules": {
          "recommended": true,
          "suspicious": {
            "noDebugger": "error"
          }
        }
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
